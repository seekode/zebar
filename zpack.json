{
  "$schema": "https://github.com/glzr-io/zebar/raw/v3.1.1/resources/zpack-schema.json",
  "name": "seekode-pack",
  "version": "0.0.0",
  "description": "Custom seekode zebar for windows.",
  "tags": ["minimalistic", "seekode"],
  "previewImages": ["./resources/preview-image-1.png"],
  "repositoryUrl": "https://github.com/seekode/zebar.git",
  "widgets": [
    {
      "name": "main-bar",
      "htmlPath": "main-bar/index.html",
      "zOrder": "normal",
      "shownInTaskbar": false,
      "focused": false,
      "resizable": false,
      "transparent": true,
      "includeFiles": ["main-bar/**"],
      "caching": {
        "defaultDuration": 604800,
        "rules": []
      },
      "privileges": {
        "shellCommands": []
      },
      "presets": [
        {
          "name": "default",
          "anchor": "top_center",
          "offsetX": "0px",
          "offsetY": "0px",
          "width": "100%",
          "height": "40px",
          "monitorSelection": {
            "type": "primary"
          },
          "dockToEdge": {
            "enabled": false,
            "edge": null,
            "windowMargin": "0px"
          }
        }
      ]
    },
    {
      "name": "secondary-bar",
      "htmlPath": "secondary-bar/index.html",
      "zOrder": "normal",
      "shownInTaskbar": false,
      "focused": false,
      "resizable": false,
      "transparent": true,
      "includeFiles": ["secondary-bar/**"],
      "caching": {
        "defaultDuration": 604800,
        "rules": []
      },
      "privileges": {
        "shellCommands": []
      },
      "presets": [
        {
          "name": "default",
          "anchor": "top_center",
          "offsetX": "0px",
          "offsetY": "0px",
          "width": "100%",
          "height": "40px",
          "monitorSelection": {
            "type": "secondary"
          },
          "dockToEdge": {
            "enabled": false,
            "edge": null,
            "windowMargin": "0px"
          }
        }
      ]
    }
  ]
}
